{
  "name": "StateExample",
  "desc": "Example contract demonstrating global state, local state, and box storage",
  "methods": [
    {
      "name": "set_global",
      "args": [
        { "type": "uint64", "name": "int1" },
        { "type": "uint64", "name": "int2" },
        { "type": "string", "name": "bytes1" },
        { "type": "byte[]", "name": "bytes2" }
      ],
      "returns": { "type": "void" }
    },
    {
      "name": "set_local",
      "args": [
        { "type": "uint64", "name": "local_int1" },
        { "type": "uint64", "name": "local_int2" },
        { "type": "string", "name": "local_bytes1" },
        { "type": "byte[]", "name": "local_bytes2" }
      ],
      "returns": { "type": "void" }
    },
    {
      "name": "set_box",
      "args": [
        { "type": "byte[]", "name": "name" },
        { "type": "byte[]", "name": "value" }
      ],
      "returns": { "type": "void" }
    }
  ],
  "networks": {},
  "state": {
    "global": {
      "num_byte_slices": 2,
      "num_uints": 2
    },
    "local": {
      "num_byte_slices": 2,
      "num_uints": 2
    }
  },
  "schema": {
    "global": {
      "declared": {
        "int1": { "type": "uint64", "key": "int1" },
        "int2": { "type": "uint64", "key": "int2" },
        "bytes1": { "type": "bytes", "key": "bytes1" },
        "bytes2": { "type": "bytes", "key": "bytes2" }
      },
      "reserved": {}
    },
    "local": {
      "declared": {
        "local_int1": { "type": "uint64", "key": "local_int1" },
        "local_int2": { "type": "uint64", "key": "local_int2" },
        "local_bytes1": { "type": "bytes", "key": "local_bytes1" },
        "local_bytes2": { "type": "bytes", "key": "local_bytes2" }
      },
      "reserved": {}
    }
  }
}
