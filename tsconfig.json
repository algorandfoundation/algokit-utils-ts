{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "types": ["node"],
    "outDir": "dist",
    "declaration": true,
    "importHelpers": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "composite": true
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "rollup-multi-plugin.ts", "rollup.config.ts", "package.json"],
  "exclude": ["**/*.algo.ts"],
  "references": [
    { "path": "./algokit_common" },
    { "path": "./algokit_abi" },
    { "path": "./algokit_transact" },
    { "path": "./algod_client" },
    { "path": "./algokit_utils" },
    { "path": "./kmd_client" }
  ]
}
