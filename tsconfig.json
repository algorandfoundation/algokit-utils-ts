{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "types": ["node"],
    "outDir": "dist",
    "declaration": true,
    "importHelpers": true,
    "isolatedModules": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["**/*.algo.ts"],
  "references": [
    { "path": "./packages/common" },
    { "path": "./packages/abi" },
    { "path": "./packages/transact" },
    { "path": "./packages/algod_client" },
    { "path": "./packages/kmd_client" },
    { "path": "./packages/indexer_client" }
  ]
}
