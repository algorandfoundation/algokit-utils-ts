{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "types": ["node"],
    "outDir": "dist",
    "declaration": true,
    "importHelpers": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "composite": true,
    "paths": {
      "@algorandfoundation/algokit-common": ["./algokit_common/dist"],
      "@algorandfoundation/algokit-abi": ["./algokit_abi/dist"],
      "@algorandfoundation/algokit-transact": ["./algokit_transact/dist"],
      "@algorandfoundation/algod-client": ["./algod_client/dist"],
      "@algorandfoundation/kmd-client": ["./kmd_client/dist"]
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "tests/**/*.json", "rollup-multi-plugin.ts", "rollup.config.ts", "package.json"],
  "exclude": ["**/*.algo.ts"],
  "references": [
    { "path": "./algokit_common" },
    { "path": "./algokit_abi" },
    { "path": "./algokit_transact" },
    { "path": "./algod_client" },
    { "path": "./kmd_client" }
  ]
}
