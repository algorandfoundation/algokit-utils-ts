{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/esm",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "declarationDir": "./dist/types"
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  },
  "exclude": ["src/**/*.spec.ts", "tests/**/*.*", "src/testing/asset.ts"]
}
